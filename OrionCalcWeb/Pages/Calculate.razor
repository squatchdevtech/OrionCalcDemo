@page "/calc"
@using System.Net.Http
@using System.Collections
@inject HttpClient Http


<PageTitle>Calculations</PageTitle>

<h1>Do some math!</h1>

<div class='container'>
        <div class="row">
            <button onclick="@AddItem">Test</button>
        </div>
</div>



@code {
    public class SubmittedItems
    {
        public string[] numbers { get; set; }
        public string? baseNumberSystem { get; set; }
    }

    public class MathResult
    {
        public decimal FinalValue { get; set; }
        public string? Message { get; set; }
        public bool IsSuccess { get; set; }
        public ArrayList Values { get; set; }


    }

    private async Task AddItem()
    {
        var addItem = new SubmittedItems  { numbers = ["2","3"], baseNumberSystem = "ten"};
        var resp = await Http.PostAsJsonAsync("Add", addItem);
        var content = await resp.Content.ReadFromJsonAsync<MathResult>() ?? new MathResult();

    }
}
